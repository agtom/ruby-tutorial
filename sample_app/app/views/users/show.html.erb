<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<!-- define a gravatar_for helper which will be located in the helper file for users -->
				<%= gravatar_for @user %>
				<%= @user.name %>
				</h1>
<!-- instance variable defined in controller is available in views -->
		</section>
	</aside>
</div>

